{
    "compilerOptions": {
      "target": "es2016",                                  
      "experimentalDecorators": true,                   
      "emitDecoratorMetadata": true,                               
      "rootDir": "./",                                  
      "baseUrl": "./src",
      "module": "commonjs",                            
      "resolveJsonModule": true,                        
      "outDir": "./dist",                                   
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,            
      "skipLibCheck": true,
      "moduleResolution": "node",
      "strictPropertyInitialization": false
    }
  }